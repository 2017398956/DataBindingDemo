        <activity android:name=".context.ObserverActivity">
            <intent-filter>
                <action android:name="connorlin.databinding.action.Observer"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".context.ObserverFieldActivity">
