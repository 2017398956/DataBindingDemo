        </activity>
        <activity android:name=".context.TwoWayActivity">
            <intent-filter>
                <action android:name="connorlin.databinding.action.TwoWay"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".context.EventActivity">
            <intent-filter>
                <action android:name="connorlin.databinding.action.Event"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".context.ViewStubActivity">
            <intent-filter>
                <action android:name="connorlin.databinding.action.ViewStub"/>

                <category android:name="android.intent.category.DEFAULT"/>
