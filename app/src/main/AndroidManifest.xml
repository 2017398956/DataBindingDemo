        <activity android:name=".context.ObserverCollectionActivity">
            <intent-filter>
                <action android:name="connorlin.databinding.action.ObserverCollection"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>

</manifest>